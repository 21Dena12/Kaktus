<Page x:Class="Kaktus.DBMODEL.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">
 <Grid>
    <TextBlock Text="Авторизация" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

    <Label Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="200,100,0,0"/>
    <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Margin="260,100,0,0"/>

    <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="200,150,0,0"/>
    <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Margin="260,150,0,0"/>

    <TextBlock x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50"/>

    <Button Content="Войти" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,250,0,0" Click="LoginButton_Click"/>
    </Grid>
</Page>
