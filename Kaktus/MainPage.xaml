<Page x:Class="Kaktus.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kaktus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     Title="MainPage">
    <Grid>
        <TextBlock Text="Главное меню" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <Button Content="Кактусы" Width="150" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="200,0,0,0" Click="CactiButton_Click"/>
        <Button Content="Связи кактусов и выставок" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0" Click="GoToCactusExhibitionsPage_Click"/>
        <Button Content="Выставки" Width="150" Height="50" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,200,0" Click="ExhibitionsButton_Click"/>
    </Grid>
</Page>
